{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "moduleResolution": "node",
        "strictNullChecks": false,
        "strictFunctionTypes": false,
        "newLine": "crlf",
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "./dist",
        "baseUrl": "./src/",

        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ],
            
        }
    },
    "include": [
        "src/**/*"
    ]
}